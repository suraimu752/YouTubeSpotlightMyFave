{
    "name": "YouTubeSpotlightMyFave",
    "description": "推しチャンネルを設定すると、Youtubeの登録チャンネルのページでその推しのライブを一番上に表示するやつ",
    "manifest_version": 2,
    "version": "1.0",
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["jquery-3.5.1.min.js", "content_scripts.js"]
        }
    ],
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "web_accessible_resources": [
        "imgs/addFave.png",
        "imgs/remFave.png"
    ]
}
